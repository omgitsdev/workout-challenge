<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Frequency</th>
      <th>Wager</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.name %></td>
        <td><%= challenge.frequency %></td>
        <td><%= challenge.wager %></td>
        <td><%= challenge.duration %></td>
        <% if current_user.group == @group %>
          <td>
            <button class="record_activity" id="record_activity <%= challenge.id %>">Record Activity</button>
          </td>
        <% end %>
        <% if current_user == @group.admin %>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

